<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shen.dribbble">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.shen.dribbble.DribbbleApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".shots.ShotsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".shotdetail.ShotDetailActivity"/>
        <activity android:name=".user.UserActivity"/>
        <activity android:name=".likes.LikesActivity"/>
        <activity android:name=".comments.CommentsActivity"/>
        <activity android:name=".buckets.BucketsActivity"/>
        <activity android:name=".bucketdetail.BucketDetailActivity"/>
    </application>

</manifest>